      val = toStringExp()           |
      val = toWsetExp()             |
      val = toBoolExp()             |
      val = trimExp()               |
      val = literalBoolExp()        |
      val = zcurveExp()             |
      ( <LPAREN> val = statement() <RPAREN> { val = new ParenthesisExpression(val); } ) )
    { return val; }
}

