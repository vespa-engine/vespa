      val = splitExp()              |
      val = substringExp()          |
      val = summaryExp()            |
      val = switchExp()             |
      val = thisExp()               |
      val = tokenizeExp()           |
      val = toArrayExp()            |
      val = toByteExp()             |
      val = toDoubleExp()           |
      val = toFloatExp()            |
      val = toIntExp()              |
      val = toLongExp()             |
