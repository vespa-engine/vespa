FieldValue numericValue() :
{
    FieldValue val;
    String pre = "";
}
{
    ( [ <ADD> | <SUB> { pre = "-";                             } ]
      ( <DOUBLE>      { val = parseDouble(pre + token.image);  } |
        <FLOAT>       { val = parseFloat(pre + token.image);   } |
        <INTEGER>     { val = parseInteger(pre + token.image); } |
        <LONG>        { val = parseLong(pre + token.image);    } ) )
    { return val; }
}

