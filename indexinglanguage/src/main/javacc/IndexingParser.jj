String fieldName() :
{
    StringBuilder builder = new StringBuilder();
    String str;
}
{
    ( str = identifier() { builder.append(str); } (
      LOOKAHEAD(2) <DOT> { builder.append(token.image); }
      str = identifier() { builder.append(str); } )* )
    { return builder.toString(); }
}

