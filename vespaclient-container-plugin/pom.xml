  <artifactId>vespaclient-container-plugin</artifactId>
  <version>8-SNAPSHOT</version>
  <packaging>container-plugin</packaging>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
