            <scope>system</scope>
            <type>test-jar</type>
            <version>test</version>
            <systemPath>${my-comp.jar.path}</systemPath>
        </dependency>
        <dependency>
            <groupId>com.yahoo.vespa.testrunner.test</groupId>
